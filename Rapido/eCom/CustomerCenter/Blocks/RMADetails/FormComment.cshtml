@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@using Dynamicweb.Rapido.Blocks
@using Dynamicweb.Rapido.Blocks.Components.General
@using Dynamicweb.Rapido.Blocks.Components

@functions {
   BlocksPage formCommentPage = BlocksPage.GetBlockPage("RMADetails");
}

@{
    if (GetBoolean("Ecom:CustomerCenter.RMA.HasRMAOrderLines") && GetBoolean("Ecom:CustomerCenter.RMA.HasAddComment") && !GetBoolean("Ecom:CustomerCenter.RMA.HasCancelContent"))
    {
        formCommentPage.Add("RmaDetailsForm", new Block
        {
            Id = "FormComment",
            SortId = 40,
            Design = new Design
            {
                CssClass = "u-margin-top--lg"
            },
            Component = new TextareaField
            {
                Id = "RMAComment",
                Name = GetString("ParagraphID") + "RMAComment",
                Rows = 3,
                Required = true,
                Label = GetBoolean("Ecom:CustomerCenter.RMA.HasAddContent") ? Translate("Additional info") : Translate("Customer comment")
            }
        });
    }
}