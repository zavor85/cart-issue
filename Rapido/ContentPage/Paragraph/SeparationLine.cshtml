@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.ParagraphViewModel>
@using Dynamicweb.Frontend
@using Dynamicweb.Content.Items
@using Dynamicweb.Rapido.Blocks.Components
@using Dynamicweb.Rapido.Blocks.Components.General

@Include("ParagraphBase.cshtml")

@{ 
    var colorService = new ColorSwatchService();
    string color = Model.Item.GetString("Color") != null ? Model.Item.GetString("Color") : "";
    color = !color.Contains("#") ? colorService.GetHexColor(Pageview.AreaID, color) : color;

    string cssClasses = "separation-line--weight-" + Model.Item.GetList("Weight").SelectedValue;
    cssClasses += " separation-line--width-" + Model.Item.GetList("Width").SelectedValue;

    string horizontalAlign = Model.Item.GetList("HorizontalAlignment") != null ? "separation-line-container--align-" + Model.Item.GetList("HorizontalAlignment").SelectedValue : "";
}

<div class="separation-line-container @horizontalAlign dw-mod">
    <div class="separation-line @cssClasses dw-mod" style="border-color: @color"></div>
</div>




