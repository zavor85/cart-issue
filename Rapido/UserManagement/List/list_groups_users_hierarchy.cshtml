@GetLoop("Users").Count


@foreach(LoopItem user in GetLoop("AllUsers"))
{
    <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
            <td rowspan="4" valign="top" align="left">
                @if (!string.IsNullOrEmpty(user.GetString("UserManagement:User.Image.Clean")))
                {
                    <a href="@user.GetString("UserManagement:User.DetailUrl")">
                        <img class="b-lazy" src="/Files/Images/placeholder.gif" data-src="/admin/public/getimage.aspx?fmImage_path=@user.GetString("UserManagement:User.Image.Clean")&amp;width=50" alt="@user.GetString("UserManagement:User.Name")" border="0" />
                    </a>
                }
                else
                {
                    <img src="/x.gif" width="50" alt="" border="0" />
                }
            </td>
            <td rowspan="4" valign="top" align="left">
                <img src="/x.gif" width="10" alt="" border="0" />
            </td>
            <th align="left">@Translate("Name"): </th>
            <td rowspan="4" valign="top" align="left">
                <img src="/x.gif" width="10" alt="" border="0" />
            </td>
            <td width="100%"><a href="@user.GetString("UserManagement:User.DetailUrl")">@user.GetString("UserManagement:User.Name")</a></td>
        </tr>
        <tr>
            <th align="left">@Translate("Email"): </th>
            <td>@user.GetString("UserManagement:User.Email")</td>
        </tr>
        <tr>
            <th align="left">@Translate("Phone"): </th>
            <td>@user.GetString("UserManagement:User.Phone")</td>
        </tr>
        <tr>
            <th align="left">@Translate("Department"): </th>
            <td>@user.GetString("UserManagement:User.Department")</td>
        </tr>
        <tr>
            <td colspan="5">
                <hr />
            </td>
        </tr>
    </table>
}
