@inherits RazorTemplateBase<RazorTemplateModel<Template>>
@using Dynamicweb.Rendering;
@MasterPageFile("../../EmailMaster.cshtml")
@Include("../../EmailHelpers.cshtml")

<table bgcolor="#FFFFFF" border="0" cellpadding="0" cellspacing="0" width="500" id="emailBody">
    @RenderHeaderSection()
    @RenderMessage()
    @RenderFooterSection()
</table>

@* CONTENT HELPERS *@

@helper RenderHeaderSection()
{
    @RenderHeaderImage();
}

@helper RenderMessage()
{
   

    Column message = new Column();
    message.subheader = Translate("Notifikationsbestilling");
    message.text.Add("");
    message.text.Add(Translate("Kære administrator"));
    message.text.Add("");
    message.text.Add(Translate("En kunde er interesseret i et produkt, og vil gerne vide, hvornår det forventes at være tilbage på lager."));

    message.text.Add("<a href='"+ GetString("Field.Productpage.Value") +"'>" + GetString("Field.Productname.Value") + "</a>");
    message.text.Add("");
    message.text.Add(Translate("Kunden kan kontaktes her: "));
    message.text.Add("<a href='mailto:"+ GetString("Field.Email.Value") +"'>" + GetString("Field.Email.Value") + "</a>");
    @CreateRow(message);
}
